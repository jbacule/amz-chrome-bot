{
    "name": "AMZ Chrome Bot",
    "version": "1.3.0",
    "author":"shujo",
    "description": "A mini-bot extension that navigates & get data from Seller Central and Amazon website.",
    "permissions": [
        "declarativeContent",
        "notifications",
        "background",
        "tabs",
        "storage",
        "activeTab"
    ],
    "background": {
        "scripts": ["js/jquery.js","background.js"],
        "persistent": false
    },
    "content_scripts":[{
        "run_at": "document_end",
        "matches": ["https://sellercentral.amazon.com/*","https://www.amazon.com/*"],
        "js": ["js/jquery.js","js/myscript.js","content.js"]
    }],
    "browser_action": {
        "default_icon": {
          "16": "images/icon16.png",
          "24": "images/icon32.png",
          "32": "images/icon48.png"
        },
        "default_title": "AMZ Chrome Bot",
        "default_popup": "popup.html"
      },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "manifest_version": 2
  }